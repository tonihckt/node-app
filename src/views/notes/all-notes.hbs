<div class="row">
  {{#each notes}}  {{!-- recorre los datos de la base de datos --}} 
  <div class="col-md-3">
    <div class="card mt-4 text-center">
        <div class="card-header text-right bg-transparent">
          <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </div>
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }}
        </h4>
        <p>{{ description }}</p>
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block  ">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto mt-4 text-center">
      <div class="card-body">
        <h1>Hello! {{user.name}}</h1>
        <span class="fa-stack fa-lg mb-2">
          <i class="far fa-smile-wink fa-stack-2x"></i>
        </span>
        <p class="lead">There are not Notes yet.</p>
        <a href="/notes/add" class="btn btn-success btn-block btn-md">Create One!</a>
      </div>
  </div>
  {{/each}}
</div>