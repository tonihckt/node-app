<div class="col-md-4 mx-auto">
  <div class="card mt-4 text-center">
    <div class="card-header">
      <h3 class="mt-2 font-weight-normal">Edit Ong</h3>
    </div>
    <div class="card-body">
        {{!-- la nota que me a creado el servidor, colocar su id y hace una cosulta de metodos --}}
      <form action="/ongs/edit-ong/{{ong._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="name" placeholder="Name" class="form-control" value="{{ong.name}}"/>
        </div>
        <div class="form-group">
          <textarea name="description" placeholder="Description" class="form-control">{{ong.description}}</textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>